<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGround"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/backBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/invisible"
        android:text="@string/backBtn"
        android:textAlignment="textStart"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/userTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:textColor="@color/textColour"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/backBtn" />

    <Button
        android:id="@+id/currStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="100dp"
        android:backgroundTint="@color/purple_200"
        android:text="@string/currStatus"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/userTitle" />

    <TextView
        android:id="@+id/text0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/curSfLv"
        android:textAlignment="center"
        android:textColor="@color/textColour"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/currStatus"/>

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/danArea"
        android:textAlignment="center"
        android:textColor="@color/textColour"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/text0"/>

    <Button
        android:id="@+id/management"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="100dp"
        android:backgroundTint="@color/purple_200"
        android:text="@string/management"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/text1" />

    <Button
        android:id="@+id/additional"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="100dp"
        android:backgroundTint="@color/purple_200"
        android:text="@string/additional"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/management" />

</androidx.constraintlayout.widget.ConstraintLayout>